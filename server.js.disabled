// transcriber-service/server.js
require("dotenv").config();
const express = require("express");
const cors = require("cors");
const { spawn } = require("child_process");
const fetch = require("node-fetch");

const app = express();
app.use(cors());
app.use(express.json({ limit: "1mb" }));

const PORT = process.env.PORT || 5051;
const DEEPGRAM_API_KEY = process.env.DEEPGRAM_API_KEY;

/* ============================================================================
   1) Download YouTube audio into a Buffer using the SAME pattern that worked
      for you manually:
      yt-dlp --cookies-from-browser chrome -f bestaudio URL -o FILE
============================================================================= */
function downloadAudioToBuffer(youtubeUrl) {
  return new Promise((resolve, reject) => {
    console.log("ðŸŽ§ [YT-DLP] Starting audio download:", youtubeUrl);

    // This mirrors the working CLI you used, but outputs to stdout (-o -)
    const yt = spawn("yt-dlp", [
      youtubeUrl,
      "-f",
      "bestaudio",
      "-o",
      "-",
      "--cookies-from-browser",
      "chrome",
      "--user-agent",
      "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/123.0.0.0 Safari/537.36",
      "--referer",
      "https://www.youtube.com/",
      "--add-header",
      "Origin: https://www.youtube.com",
      "--add-header",
      "Accept-Language: en-US,en;q=0.9",
      "--force-ipv4",
      "--no-check-certificates",
    ]);

    const chunks = [];
    let stderrData = "";

    // Progress logs from stderr (same as CLI)
    yt.stderr.on("data", (data) => {
      const text = data.toString();
      stderrData += text;

      const m = text.match(
        /(\d{1,3}\.\d)% of\s+([\d\.]+[KMG]iB).*?at\s+([\d\.]+[KMG]iB\/s).*?ETA\s+([\d:]+)/i
      );
      if (m) {
        const [_, percent, size, speed, eta] = m;
        console.log(`â¬‡ï¸  [YT-DLP] ${percent}% | ${size} | ${speed} | ETA: ${eta}`);
      } else if (/Downloading \d+ format/.test(text)) {
        console.log("â„¹ï¸ [YT-DLP]", text.trim());
      }
    });

    yt.stdout.on("data", (chunk) => {
      chunks.push(chunk);
    });

    yt.on("error", (err) => {
      console.error("ðŸŽ§ [YT-DLP SPAWN ERROR]:", err);
      reject(err);
    });

    yt.on("close", (code) => {
      console.log("ðŸŽ§ [YT-DLP] exited with code", code);

      if (code !== 0) {
        console.error("ðŸŽ§ [YT-DLP ERROR]:", stderrData);
        return reject(new Error("yt-dlp failed"));
      }

      const buffer = Buffer.concat(chunks);
      console.log("ðŸŽ§ [YT-DLP] Audio buffer size:", buffer.length);
      resolve(buffer);
    });
  });
}

/* ============================================================================
   2) Send raw audio Buffer to Deepgram
============================================================================= */
async function deepgramFromAudioBuffer(audioBuffer) {
  if (!DEEPGRAM_API_KEY) {
    console.warn("âš ï¸ [DEEPGRAM] Missing DEEPGRAM_API_KEY");
    return null;
  }

  console.log("ðŸŸ  [DEEPGRAM] Sending audio bufferâ€¦ size:", audioBuffer.length);

  try {
    const dgRes = await fetch(
      "https://api.deepgram.com/v1/listen?model=nova-2-general&smart_format=true&language=en",
      {
        method: "POST",
        headers: {
          Authorization: `Token ${DEEPGRAM_API_KEY}`,
          "Content-Type": "application/octet-stream",
        },
        body: audioBuffer,
      }
    );

    console.log("ðŸŸ  [DEEPGRAM] HTTP:", dgRes.status);

    if (!dgRes.ok) {
      const errText = await dgRes.text();
      console.error("ðŸŸ  [DEEPGRAM ERR]:", errText);
      return null;
    }

    const data = await dgRes.json();
    const txt =
      data?.results?.channels?.[0]?.alternatives?.[0]?.transcript || "";

    return txt.trim() || null;
  } catch (err) {
    console.error("ðŸŸ  [DEEPGRAM EXCEPTION]:", err);
    return null;
  }
}

/* ============================================================================
   HEALTH CHECK
============================================================================= */
app.get("/", (req, res) => {
  res.json({ ok: true, service: "Transcriber running (simple mode)" });
});

/* ============================================================================
   MAIN ENDPOINT
============================================================================= */
app.post("/transcribe", async (req, res) => {
  const { youtube_url } = req.body || {};
  console.log("ðŸ”¥ [SERVICE HIT] youtube_url:", youtube_url);

  if (!youtube_url) {
    return res.status(400).json({
      success: false,
      message: "youtube_url required",
    });
  }

  try {
    // 1) Download audio
    const audio = await downloadAudioToBuffer(youtube_url);

    if (!audio || !audio.length) {
      return res.status(500).json({
        success: false,
        message: "Failed to download audio from YouTube",
      });
    }

    // 2) Transcribe via Deepgram
    const transcript = await deepgramFromAudioBuffer(audio);

    if (!transcript) {
      return res.status(500).json({
        success: false,
        message: "Deepgram transcription failed",
      });
    }

    console.log("âœ… [SERVICE] Transcript length:", transcript.length);

    return res.json({
      success: true,
      transcript,
      chars: transcript.length,
    });
  } catch (err) {
    console.error("âŒ [SERVICE ERROR]:", err);
    return res.status(500).json({
      success: false,
      message: err.message || "Internal server error",
    });
  }
});

/* ============================================================================
   START SERVER
============================================================================= */
app.listen(PORT, () => {
  console.log(`ðŸš€ Transcriber service listening on port ${PORT}`);
});
